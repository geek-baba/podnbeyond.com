# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/podnbeyond"

# Server Configuration
PORT=4000
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"

# NextAuth Configuration (for backend API integration)
NEXTAUTH_SECRET="your-nextauth-secret-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration (for magic links)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@podnbeyond.com"

# Postmark Configuration (for transactional emails)
POSTMARK_SERVER_TOKEN="your-postmark-server-token"
POSTMARK_WEBHOOK_SECRET="your-postmark-webhook-secret"
MAIL_FROM="support@capsulepodhotel.com"

# Redis Configuration (for BullMQ email queue)
REDIS_ENABLED="true"  # Set to "true" to enable email queue (requires Redis running)
REDIS_HOST="localhost"
REDIS_PORT="6379"
# Optional: Queue prefix to separate staging/prod on same Redis instance
# If not set, uses NODE_ENV. Set to "staging" or "production" explicitly
# QUEUE_PREFIX="staging"  # or "production"

# Bootstrap Superadmin
BOOTSTRAP_SUPERADMIN_EMAIL="admin@podnbeyond.com"

# Razorpay Configuration
RAZORPAY_KEY_ID="rzp_test_xxxxxxxxxxxxx"
RAZORPAY_KEY_SECRET="your_secret_key"

# Feature Flags
REQUIRE_MFA_FOR_ROLES="manager,admin,superadmin"

# OTA Channel Configuration (Optional)
MAKEMYTRIP_ENABLED=false
MAKEMYTRIP_API_KEY=""
MAKEMYTRIP_API_SECRET=""
MAKEMYTRIP_HOTEL_ID=""

YATRA_ENABLED=false
YATRA_API_KEY=""
YATRA_API_SECRET=""
YATRA_HOTEL_ID=""

BOOKING_COM_ENABLED=false
BOOKING_COM_API_KEY=""
BOOKING_COM_API_SECRET=""
BOOKING_COM_HOTEL_ID=""

GOIBIBO_ENABLED=false
GOIBIBO_API_KEY=""
GOIBIBO_API_SECRET=""
GOIBIBO_HOTEL_ID=""

# Gupshup Configuration (WhatsApp/SMS)
GUPSHUP_ENABLED=false
GUPSHUP_API_KEY="your-gupshup-api-key"  # Create in Settings > API Keys
GUPSHUP_APP_ID="your-gupshup-app-id"    # Found in Settings (App ID)
GUPSHUP_APP_NAME="podnbeyond"            # Your app name
GUPSHUP_SOURCE="919876543210"            # WhatsApp Business number (with country code)
GUPSHUP_WEBHOOK_SECRET="your-webhook-secret"  # Optional: for webhook validation
GUPSHUP_WEBHOOK_URL="https://staging.capsulepodhotel.com/webhooks/gupshup"

# Exotel Configuration (Voice/IVR)
EXOTEL_ENABLED=false
EXOTEL_SID="your-exotel-sid"
EXOTEL_API_KEY="your-exotel-api-key"
EXOTEL_API_TOKEN="your-exotel-api-token"
EXOTEL_SUBDOMAIN="your-exotel-subdomain"
EXOTEL_FROM_NUMBER="your-exotel-from-number"
EXOTEL_WEBHOOK_SECRET="your-exotel-webhook-secret"
EXOTEL_WEBHOOK_URL="https://your-domain.com/webhooks/exotel"

